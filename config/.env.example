# ============================================================================
# Nightglow Configuration
# ============================================================================

# --- Kafka ---
NIGHTGLOW_KAFKA_BROKERS=localhost:9092
NIGHTGLOW_KAFKA_CLIENT_ID=nightglow
NIGHTGLOW_KAFKA_TOPIC_PREFIX=nightglow
NIGHTGLOW_KAFKA_BATCH_SIZE=50
NIGHTGLOW_KAFKA_LINGER_MS=500
NIGHTGLOW_KAFKA_COMPRESSION=gzip
NIGHTGLOW_KAFKA_GROUP_ID=nightglow-commands

# --- OpenTelemetry ---
NIGHTGLOW_SERVICE_NAME=nightglow
NIGHTGLOW_OTLP_TRACES_ENDPOINT=http://localhost:4318/v1/traces
NIGHTGLOW_OTLP_METRICS_ENDPOINT=http://localhost:4318/v1/metrics
NIGHTGLOW_TRACE_SAMPLE_RATE=1.0
NIGHTGLOW_METRICS_INTERVAL_MS=15000

# --- Instruments ---
NIGHTGLOW_AUTO_ENABLE_INSTRUMENTS=true
NIGHTGLOW_MAX_CONTINUOUS=5

# --- General ---
NIGHTGLOW_LOG_LEVEL=info
